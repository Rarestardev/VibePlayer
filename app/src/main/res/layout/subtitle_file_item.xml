<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/video_folder_item_shape"
    android:id="@+id/subtitleLayout"
    android:padding="@dimen/layoutPadding">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fileIcon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/icon_file"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/srt"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/fileIcon"
        app:layout_constraintEnd_toEndOf="@id/fileIcon"
        app:layout_constraintStart_toStartOf="@id/fileIcon"
        app:layout_constraintTop_toTopOf="@id/fileIcon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubtitleName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/fileIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fileIcon"
        app:layout_constraintTop_toTopOf="@id/fileIcon"
        tools:text="@string/subtitle" />

</androidx.constraintlayout.widget.ConstraintLayout>