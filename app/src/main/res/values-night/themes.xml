<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VideoVibe" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/baseColorNightMode</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="iconTint">@color/iconTintNightMode</item>
        <item name="hintTextColor">#545353</item>
        <item name="android:statusBarColor">@color/actionBarColor</item>
        <item name="android:navigationBarColor">@color/actionBarColor</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabIconTint">@color/iconTintNightMode</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorAnimationDuration">3</item>
        <item name="tabIndicatorColor">@color/button_color</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabRippleColor">@color/black_light</item>
        <item name="tabSelectedTextColor">@color/button_color</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="TransparentStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>


    <color name="cardBgColor">#262626</color>
    <color name="dialog_bg">#1A1A1A</color>
    <color name="actionBarColor">#141414</color>
    <color name="tabUnselectedColor">#545353</color>
    <color name="tabSelectedColor">#E9E7E7</color>
</resources>